{
  "manifest_version": 2,

  "name": "Reminder",
  "description": "This extension reminds you to submit the timesheet",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts":[
    {
      "matches": ["https://www.onet.pl/"],
      "js": ["content.js", "jquery-3.1.0.min.js"]
    }
  ],

  "permissions": [
          "tabs",
          "storage",
          "notifications",
          "https://www.onet.pl/"
        ]
}
